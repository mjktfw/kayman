#! /bin/bash

set -o allexport
. ./app/profile.conf
. ./app/app.conf
set +o allexport

[ -d "${HOME}/.local/bin" ] ||
  mkdir -p "${HOME}/.local/bin"
ln -sf "${APP_DIR}/app/${APP_PREFIX}-"* "${HOME}/.local/bin/"

[ -d "${HOME}/.profile.d" ] ||
  mkdir -p "${HOME}/.profile.d"
ln -sf "${APP_DIR}/app/profile" "${HOME}/.profile.d/${APP_NAME}.sh"

[ -d "${HOME}/.config/${APP_NAME}" ] ||
  mkdir -p "${HOME}/.config/${APP_NAME}"
ln -sf "${APP_DIR}/app/app.conf" "${HOME}/.config/${APP_NAME}/"
ln -sf "${APP_DIR}/app/user.conf" "${HOME}/.config/${APP_NAME}/"
