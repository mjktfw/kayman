#! /bin/bash
set -e

set -o allexport
. ./app/profile
. ./app/app.conf
set +o allexport

[ -d "${BIN_DIR}" ] ||
  mkdir -p "${BIN_DIR}"
ln -sf "${APP_DIR}/app/${APP_PREFIX}-"* "${BIN_DIR}/"

[ -d "${PROFILE_DIR}" ] ||
  mkdir -p "${PROFILE_DIR}"
ln -sf "${APP_DIR}/app/profile" "${PROFILE_DIR}/${APP_NAME}.sh"

[ -d "${CONFIG_DIR}/${APP_NAME}" ] ||
  mkdir -p "${CONFIG_DIR}/${APP_NAME}"
ln -sf "${APP_DIR}/app/config"/*.conf "${CONFIG_DIR}/${APP_NAME}/"
